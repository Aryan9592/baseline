// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BpiSubject {
  id String @id @default(uuid())
  name String
  description String  
  type Int
  publicKey String 
}

model Order {
    id String @id @default(uuid())
    price Decimal
    created_at DateTime
}

model Bpi {
    id String @id @default(uuid())
    name String
    product_id Int
    created_at DateTime
    last_updated DateTime
}

model Workstep {
    id String @id @default(uuid())
    name String
    version String
}

model BpiTimestampRecord {
    id String @id @default(uuid())
    bpi_id Int
    updated DateTime 
}

model State {
    id String @id @default(uuid())
    agreementState String
    acceptanceStatus String
}